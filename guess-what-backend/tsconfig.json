{
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "typeRoots": ["./src/types", "./src/types/express"]
  },
  "include": ["./src/**/*"]
}
